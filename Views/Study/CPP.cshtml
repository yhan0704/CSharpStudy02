@{
    ViewData["Title"] = "CPP";
    var name = "Young";
    var age = 10;
}


<h1>@name</h1>

@if(age == 3)
{
    <h1>Your age is @age</h1>
}else
{
    <h2>nothing</h2>
}

@for(var i = 0; i < age; i++)
{
    <h3>number : @i</h3>
}